<form  action="/add-department" method="POST" style="width: 400px;">
    <h1 class="container">Thêm phòng ban</h1>
    <div class="form-group container" >
      <label for="ten">tên:</label>
      <input type="text" class="form-control" id="ten" name = "ten" required>
    </div>
    <div class="form-group container">
        <button type="submit" class="btn btn-primary ">Thêm phòng ban</button>
    </div>
</form>


<section class="table-wapper">
    <table class=" table mt-4 table-striped ">
      <tr>
        <th>STT</th>
        <th>Tên phòng ban</th>
        <th>Tuỳ Chọn</th>
      </tr>
      <% var stt=1; department.forEach(item=> { %>
              <tr class="tr-hover">
                <td class="align-middle">
                  <%= stt++ %>
                </td>              
                <td class="align-middle">
                    <%= item.name %>
                </td>
                <td class="align-middle">
                  <a class="btn btn-primary" href="/department-update/<%= item._id %> ">Sửa</a>
                  <a class="btn btn-danger" href="/department-delete/<%= item._id %> ">xoá</a>
                </td>
              </tr>
        <% }); %>
    </table>
  </section>
</body>
