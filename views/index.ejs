          <h1> Danh sách cán bộ</h1>

          <table border='1'>
            <tr>
              <th>ID</th>
              <th>Họ tên</th>
              <th>Tuổi</th>
              <th>Giới tính</th>
              <th>Địa chỉ</th>
              <th>hinhanh</th>
              <th>Tuỳ Chọn</th>
            </tr>
            <% test.forEach(item => { %> 
             <tr>
              <td><%= item._id %> </td>
              <td><%= item.hoten %> </td>
              <td><%= item.tuoi %> </td>
              <td><%= item.gioitinh %> </td>
              <td><%= item.diachi %> </td>
              <td><img src="./images/<%= item.hinhanh %>" alt="" class="avatar"></td>
              <td> 
                  <a href="./form-update/<%= item._id %> ">Sửa</a>
                  <a href="./form-delete/<%= item._id %> ">xoá</a>
              </td>
            </tr>
            <% }); %>
          </table>


          

