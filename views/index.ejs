<!DOCTYPE html>
<html>

<head>
  <title>Danh sách cán bộ</title>
</head>

<body>
  <%- include('partials/header.ejs') %>

    <h1> Danh sách cán bộ</h1>
    <section class="table-wapper">
      <table class=" table mt-4 ">
        <tr>
          <th>STT</th>
          <th>Hình ảnh</th>
          <th>Họ tên</th>
          <th>Ngày sinh</th>
          <th>Giới tính</th>
          <th>Địa chỉ</th>
          <th>sdt</th>
          <th>Chức vụ</th>
          <th>Phòng ban</th>
          <th>Ngày vào</th>
          <th>Tình trạng</th>
          <th>Tuỳ Chọn</th>
        </tr>
        <% var stt=1; test.forEach(item=> { %>
          <tr class="tr-hover">
            <td class="align-middle">
              <%= stt++ %>
            </td>
            <td class="align-middle"><img src="/images/<%= item.hinhanh %>" alt="" class="avatar"></td>
            <td class="align-middle">
              <%= item.hoten %>
            </td>
            <td class="align-middle">
              <%= item.ngaysinh %>
            </td>
            <td class="align-middle">
              <%= item.gioitinh %>
            </td>
            <td class="align-middle">
              <%= item.diachi %>
            </td>
            <td class="align-middle">
              <%= item.sdt %>
            </td>
            <td class="align-middle">
              <%= item.chucvu %>
            </td>
            <td class="align-middle">
              <%= item.phongban %>
            </td>
            <td class="align-middle">
              <%= item.ngayvaocongty %>
            </td>
            <td class="align-middle">
              <%= item.tinhtrang %>
            </td>
            <td class="align-middle">
              <a class="btn btn-primary" href="./form-update/<%= item._id %> ">Sửa</a>
              <a class="btn btn-danger" data-toggle="modal" data-target="#delete-employee"
                data-id="<%= item._id %>">xoá</a>
            </td>
          </tr>
          <% }); %>
      </table>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="delete-employee" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-danger" id="exampleModalLabel">Xoá cán bộ?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Xác nhận xoá thông tin cán bộ?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Huỷ</button>
            <button type="button" class="btn btn-danger" id="delete-employee-modal">Xoá</button>
          </div>
        </div>
      </div>
    </div>

    <!-- hidden form -->
    <form name="delete-employee-form" action="GET"></form>


    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var emplyeeId;
        var btnDeleteEmployee = document.getElementById("delete-employee-modal");
        var deleteForm = document.forms["delete-employee-form"];

        $('#delete-employee').on('show.bs.modal', function (event) {
          var button = $(event.relatedTarget) // Button that triggered the modal
          emplyeeId = button.data('id') // Extract info from data-* attributes
        })
        btnDeleteEmployee.onclick = d=function() {
          deleteForm.action='/form-delete/' + emplyeeId;
          deleteForm.submit();
        }
      })
    </script>
</body>

</html>