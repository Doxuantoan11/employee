<h1>Nhập thông tin cán bộ cần tìm</h1>

<form class="search " action="/search" method="POST" style="width: 400px;">
  <div class="form-group container">
    <input type="text" class="form-control" id="searchText" name="searchText" placeholder="Nhập thông tin cần tìm " required>
  </div>
  <div class="form-group container mt-4">
    <button type="submit" class="btn btn-primary name-search-btn ">Tìm</button>
  </div>
</form>


<section class="table-wapper">
  <table class=" table mt-4 ">
    <tr>
      <th>STT</th>
      <th>Hình ảnh</th>
      <th>Họ tên</th>
      <th>Ngày sinh</th>
      <th>Giới tính</th>
      <th>Địa chỉ</th>
      <th>sdt</th>
      <th>Chức vụ</th>
      <th>Phòng ban</th>
      <th>Ngày vào</th>
      <th>Tình trạng</th>
      <th>Tuỳ Chọn</th>
    </tr>
    <% var stt=1; test.forEach(item=> { %>
      <tr class="tr-hover">
        <td class="align-middle">
          <%= stt++ %>
        </td>
        <td class="align-middle"><img src="/images/<%= item.hinhanh %>" alt="" class="avatar"></td>
        <td class="align-middle">
          <%= item.hoten %>
        </td>
        <td class="align-middle">
          <%= item.ngaysinh %>
        </td>
        <td class="align-middle">
          <%= item.gioitinh %>
        </td>
        <td class="align-middle">
          <%= item.diachi %>
        </td>
        <td class="align-middle">
          <%= item.sdt %>
        </td>
        <td class="align-middle">
          <%= item.chucvu %>
        </td>
        <td class="align-middle">
          <%= item.phongban %>
        </td>
        <td class="align-middle">
          <%= item.ngayvaocongty %>
        </td>
        <td class="align-middle">
          <%= item.tinhtrang %>
        </td>
        <td class="align-middle">
          <a class="btn btn-primary" href="/form-update/<%= item._id %> ">Sửa</a>
          <a class="btn btn-danger" href="/form-delete/<%= item._id %> ">xoá</a>
        </td>
      </tr>
      <% }); %>
  </table>
</section>




  
</body>

