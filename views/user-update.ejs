<form action="/user-update" method="POST" style="width: 450px;">
    <h1 class="container">Sửa thông người dùng</h1>
    <div class="form-group container">
      <input type="hidden" class="form-control" id="id" name="id" value="<%= userCurrent._id  %>">
    </div>
    <div class="form-group container">
      <label for="username">Người dùng:</label>
      <input type="text" class="form-control" id="username" name="username" value="<%= userCurrent.username  %>" readonly>
    </div>
    <div class="form-group container"> Quyền:
      <select class="form-control" name="roleName">
        
        <option value="manager" <%=userCurrent.roleName==='manager' ? 'selected' : '' %>>manager</option>
        <option value="user" <%=userCurrent.roleName=='user' ? 'selected' : '' %>>user</option>
      </select>
    <div class="form-group container mt-2 mr-4">
      <button type="submit" class="btn btn-primary ">Sửa</button>
    </div>
  </form>
  
